{
  "manifest_version": 3,
  "name": "Twitter Without X",
  "description": "Base Level Extension",
  "icons": {
    "16": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  },
  "version": "1.0",
  "action": {
    "default_icon": "./assets/icon.png"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": ["./scripts/index.js"],
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
        "resources": ["./assets/favicon.ico"],
        "matches": [
          "*://*.twitter.com/*",
          "*://*.x.com/*"
        ],
        "extension_ids": ["*"]
    }
]
}